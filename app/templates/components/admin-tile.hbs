<div class="list-block">
  <span class="category-container"><h5 class="category image-overlay-text">{{question.category}}</h5></span>
  <img src="{{question.listImageURL}}" alt="{{question.titleListView}}" class="list-view-image">
  <h3 class="list-view-title">{{question.titleListView}}</h3>
  <div class="by-line">
    <span class="author">{{question.author}}</span>
  </div>
  {{update-question question=question update="update"}}
  <button {{action 'delete' question}}>Delete</button>
</div>
