<div class="question-body container">
  <h3 class="list-view-title">{{question.titleDetailView}}</h3>
  <hr>
  <div class="by-line">
    <h6 class="author">{{question.author}}</h6>
    <h5 class="category">{{question.category}}</h5>
  </div>
  <div class="body-copy">
    {{question.bodyCopy}}
  </div>
    <button {{action 'addToFav' question}}>Add to Favorites</button>
</div>


<div class="container">
  <h3>Posted Answers:</h3>
  <ul>
    {{#each question.answers as |answer|}}
      <li>{{question-rating answer.rating}}<h4>{{answer.name}} says</h4> <p>{{answer.answer}}</p></li>
    {{/each}}
  </ul>
</div>
