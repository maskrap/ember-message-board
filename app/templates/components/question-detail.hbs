<div class="question-body">
  <h5 class="category">{{question.category}}</h5>
  <h3 class="list-view-title">{{question.titleDetailView}}</h3>
  <hr>
  <div class="by-line">
    <h6 class="author">{{question.author}}</h6>
  </div>
  <div class="body-copy">
    {{question.bodyCopy}}
  </div>
</div>



<h3>Posted Answers:</h3>
<ul>
  {{#each question.answers as |answer|}}
    <li><h4>{{answer.name}} says</h4> <p>{{answer.answer}}</p></li>
  {{/each}}
</ul>
