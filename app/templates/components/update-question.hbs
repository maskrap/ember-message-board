<div class="container">
{{#if showUpdateForm}}
  <h4>Update Question: {{question.titleListView}}</h4>
    <form>
      <div class="form-group">
        <label for="titleListView">List View Title</label>
        {{input value=titleListView id="titleListView"}}
      </div>

      <div class="form-group">
        <label for="titleDetailView">Detail View Title</label>
        {{input value=titleDetailView id="titleDetailView"}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <button {{action 'update' question}}>Save</button>
    </form>
{{else}}
  <button {{action 'showUpdateForm'}}>Update Question</button>
{{/if}}
</div>
